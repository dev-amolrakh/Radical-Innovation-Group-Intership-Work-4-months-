<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %>'s Resume</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
            color: #000;
            margin: 0;
            padding: 0;
            background-color: #fff;
        }
        .template-container {
            max-width: 800px;
            background-color: #fff;
            padding: 35px;
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 0;
            margin-top: 0;
        }
        .header-container h1 {
            font-size: 24px;
            color: <%= colorTheme %>;
        }
        .summary {
            width: 60%;
            text-align: justify;
        }
        .contact-info {
            font-size: 14px;
            text-align: left;
            flex-grow: 1;
            margin: 0;
            padding: 0;
            line-height: 1;
        }
        .section {
            margin-top: 20px;
        }
        .section-title {
            font-size: 18px;
            color: <%= colorTheme %>;
            border-top: 2px solid <%= colorTheme %>;;
            border-bottom: 2px solid <%= colorTheme %>;;
            padding: 5px;
            text-align: center;
        }
        .item {
            margin-top: 5px;
        }
        .item-header {
            display: flex;
            justify-content: space-between;
            font-weight: 600;
            font-size: 16px;
        }
        .item-header span:last-child {
            color: #000;
        }
        .item-content {
            color: #000;
            font-size: 14px;
        }
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .skill-tag {
            border: 1px solid <%= colorTheme %>;
            color:  #000;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="template-container">
        <div class="header-container">
            <div>
                <h1><%= name %></h1>
                <div class="contact-info">
                    <p><%= email %></p>
                    <p><%= phone %></p>
                    <p><%= linkedin %></p>
                    <p><%= portfolio %></p>
                    <p><%= location %></p>
                </div>
            </div>
            <div class="summary"><%= summary %></div>
        </div>
        <% if (qualifications && qualifications.length > 0) { %>
            <div class="section">
                <h2 class="section-title">Education</h2>
                <% qualifications.forEach(function(qual) { %>
                    <div class="item">
                        <div class="item-header">
                            <span><%= qual.degree %></span>
                            <span><%= qual.percentage %></span>
                        </div>
                        <div class="item-content"><%= qual.institute %></div>
                    </div>
                <% }); %>
            </div>
            <% } %>
            <% if (skills && skills.length > 0) { %>
                <div class="section">
                    <h2 class="section-title">Skills</h2>
                    <div class="skills-container">
                        <% skills.forEach(function(skill) { %>
                            <span class="skill-tag"><%= skill %></span>
                        <% }); %>
                    </div>
                </div>
                <% } %>

    
            <% if (experience && experience.length > 0) { %>
            <div class="section">
                <h2 class="section-title">Experience</h2>
                <% experience.forEach(function(exp) { %>
                    <div class="item">
                        <div class="item-header">
                            <span><%= exp.position %></span>
                            <span><%= exp.duration %></span>
                        </div>
                        <div class="item-content"><%= exp.company %></div>
                        <ul>
                            <% exp.details.forEach(function(detail) { %>
                                <li class="item-content"><%= detail %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% }); %>
            </div>
            <% } %>
            <% if (projects && projects.length > 0) { %>
                <div class="section">
                    <h2 class="section-title">Projects</h2>
                    <% projects.forEach(function(proj) { %>
                        <div class="item">
                            <div class="item-header">
                                <span><%= proj.title %></span>
                            </div>
                            <ul>
                                <% proj.description.forEach(function(desc) { %>
                                    <li class="item-content"><%= desc %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% }); %>
                </div>
                <% } %>
                <% if (optionalDetails && optionalDetails.length > 0) { %>
                    <div class="section">
                        <h2 class="section-title">Additional Information</h2>
                        <% optionalDetails.forEach(function(detail) { %>
                            <p class="item-content"><%= detail %></p>
                        <% }); %>
                    </div>
                    <% } %>
    </div>
</body>
</html>