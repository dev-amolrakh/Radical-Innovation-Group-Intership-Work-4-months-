<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %>'s Resume</title>
    <style>
        /* Previous styles remain the same until two-column layout */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #000;
            margin: 0;
            padding: 30px;
            background-color: #fff;
            font-size: <%= fontSize +4 %>px; 
        }
        .template-container {
            max-width: 800px;
            margin: 0 ;
            background-color: #fff;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            color: <%= colorTheme %>;
            font-size: <%= fontSize + 8 %>px; 
            margin: 0 0 5px 0;
            letter-spacing: 1px;
        }
        .contact-info {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            font-size: 14px;
            color: #000;
            margin: 0; 
            padding: 0; 
        }
        .contact-info p {
            margin: 0; 
            padding-bottom: 0;
            padding-top: 0;
            line-height: 0.75;
        }
        .section {
            margin-bottom: 10px;
        }
        .section-title {
            color: <%= colorTheme %>;
            font-size: <%= fontSize + 2 %>px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 1px solid <%= colorTheme %>;
            padding-bottom: 3px;
            text-transform: uppercase;
        }
        .list-item {
            font-size: <%= fontSize + 2 %>px;
        }
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        .skill-tag {
            background-color: #fff;
            border: 1px solid <%= colorTheme %>;
            border-radius: 15px;
            padding: 3px 12px;
            font-size: <%= fontSize + 2  %>px;
            color:#000;
        }
        .additional-info p {
            margin: 5px 0;
            font-size: <%= fontSize + 2 %>px;
        }

        /* Updated two-column layout styles */
        .two-column {
            display: flex;
            gap: 3%; /* This will be the 1% gap between columns */
            margin-bottom: 25px;
            width: 100%;
        }
        .column:first-child {
            flex: 0 0 55%; /* Left column takes up 55% */
            width: 55%;
        }
        .column:last-child {
            flex: 0 0 44%; /* Right column takes up 44% */
            width: 42%;
        }
    </style>
</head>
<!-- Rest of the HTML remains exactly the same -->
<body>
    <div class="template-container">
        <div class="header">
            <h1><%= name %></h1>
            <div class="contact-info">
                <% if (email && email.trim() !== '') { %><p><%= email %></p><% } %>
                <% if (phone && phone.trim() !== '') { %><p><%= phone %></p><% } %>
                <% if (location && location.trim() !== '') { %><p><%= location %></p><% } %>
                <% if (linkedin && linkedin.trim() !== '') { %><p>LinkedIn: <%= linkedin %></p><% } %>
                <% if (portfolio && portfolio.trim() !== '') { %><p>Portfolio: <%= portfolio %></p><% } %>
            </div>
        </div>

        <div class="section">
            <% if (summary && summary.trim() !== '') { %>
                <div class="section">
                    <h2 class="section-title">Summary</h2>
                    <p style="font-size: <%= fontSize + 2 %>px;"><%= summary %></p>
                </div>
            <% } %>
        </div>

        <div class="two-column">
            <div class="column">
                <% if (experience && experience.length > 0) { %>
                    <div class="section">
                        <h2 class="section-title">Experience</h2>
                        <% experience.forEach(function(exp) { %>
                            <div>
                                <strong><%= exp.position %></strong> - <%= exp.company %><br>
                                <small><%= exp.duration %></small>
                                <ul>
                                    <% exp.details.forEach(function(detail) { %>
                                        <li class="list-item"><%= detail %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% }); %>
                    </div>
                    <% } %>
        
                    <% if (projects && projects.length > 0) { %>
                    <div class="section">
                        <h2 class="section-title">Projects</h2>
                        <% projects.forEach(function(proj) { %>
                            <div>
                                <strong><%= proj.title %></strong>
                                <ul>
                                    <% proj.description.forEach(function(desc) { %>
                                        <li class="list-item"><%= desc %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% }); %>
                    </div>
                    <% } %>
            </div>

            <div class="column">
                <% if (qualifications && qualifications.length > 0) { %>
                    <div class="section">
                        <h2 class="section-title">Qualifications</h2>
                        <% qualifications.forEach(function(qual) { %>
                            <div>
                                <strong style="font-size: <%= fontSize + 2 %>px;"><%= qual.degree %></strong>
                                <p style="font-size: <%= fontSize + 2 %>px;"><%= qual.institute %> - <%= qual.percentage %></p>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <% if (skills && skills.length > 0) { %>
                    <div class="section">
                        <div class="section-title">SKILLS</div>
                        <div class="skills-container">
                            <% skills.forEach(function(skill) { %>
                                <span class="skill-tag"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <% if (optionalDetails && optionalDetails.length > 0) { %>
                    <div class="section">
                        <div class="section-title">ADDITIONAL INFORMATION</div>
                        <div class="additional-info">
                            <% optionalDetails.forEach(function(detail) { %>
                                <p><%= detail %></p>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>